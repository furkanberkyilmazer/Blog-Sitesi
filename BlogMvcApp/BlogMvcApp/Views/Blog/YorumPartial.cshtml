@model IEnumerable<BlogMvcApp.Models.Comment>
<div class="well">
    <h2>Yorumlar</h2>
    <hr />
    <div class="row">
        <div class="media">
            <div class="media-body">
                @if (Model.Count() == 0)
                {
                   

                        <div class="alert alert-danger" role="alert">
                            Henüz yorum yok...
                        </div>

                    

                    <hr />
                }
                else
                {
                    foreach (var item in Model)
                    {

                        <div class="well">


                            <h4 class="mt-0 mb-1"> @item.KullaniciAdi </h4>

                            @item.Yorum

                        </div>

                        <hr />
                    }
                }

            </div>

            </div>
    </div>

</div>

